{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "controllerUID": {
            "type": "integer"
        },
        "enablePSP": {
            "type": "boolean"
        },
        "enablePodAntiAffinity": {
            "type": "boolean"
        },
        "gateway": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "loadBalancerIP": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "probe": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "port": {
                            "type": "integer"
                        },
                        "seconds": {
                            "type": "integer"
                        }
                    }
                },
                "replicas": {
                    "type": "integer"
                },
                "serviceAnnotations": {
                    "type": "object"
                },
                "serviceType": {
                    "type": "string"
                }
            }
        },
        "identityTrustDomain": {
            "type": "string"
        },
        "installNamespace": {
            "type": "boolean"
        },
        "linkerdNamespace": {
            "type": "string"
        },
        "linkerdVersion": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "proxyOutboundPort": {
            "type": "integer"
        },
        "remoteMirrorServiceAccount": {
            "type": "boolean"
        },
        "remoteMirrorServiceAccountName": {
            "type": "string"
        }
    }
}
